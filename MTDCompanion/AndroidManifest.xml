<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.illinois.mtdcompanion"
    android:versionCode="1"
    android:versionName="0.1" >

    <!-- Android SDK -->
    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <!-- Features -->
    <uses-feature android:name="android.hardware.location.gps" android:required="true"/>

    <!-- Permissions -->
    <permission android:name="android.permission.ACCESS_COARSE_LOCATION"></permission>
    <permission android:name="android.permission.ACCESS_FINE_LOCATION"></permission>
    <permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS"></permission>
    <permission android:name="android.permission.INTERNET"></permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Main Activity -->
        <activity
            android:name="edu.illinois.mtdcompanion.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
